{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "安装",
            "type": "shell",
            "command": "npx pnpm i",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "开发并进入",
            "type": "npm",
            "script": "go",
            "options": {
                "statusbar": {
                    "color": "#ff7403"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            }
        },
        {
            "type": "npm",
            "script": "launch",
            "label": "重启游戏",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "图片",
            "type": "shell",
            "command": "tsx .bin/image",
            "presentation": {
                "close": true
            }
        },
    ]
}