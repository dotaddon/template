{
    "name": "root",
    "author": "西索酱",
    "version": "2.0.0",
    "description": "a ts template for dota2 rpg, together with some helper scripts",
    "private": true,
    "repository": "https://gitee.com/kill-seven-at-once/ts-dota-rpg",
    "workspaces": [
        "src/*"
    ],
    "scripts": {
        "go": "run-p dev launch",
        "launch": "tsx .bin/launch",
        "compile": "tsx .bin/compile",
        "suggest": "code --install-extension robincode.dota2-coding-helper --install-extension actboy168.tasks",
        "images": "tsx .bin/image",
        "lint": "eslint --ext .js,.ts,.tsx --quiet --fix \"./程序\" ",
        "build": "run-p build:*",
        "build:images": "pnpm images",
        "build:panorama": "tsx .bin/esbuild",
        "build:vscripts": "tstl -p 程序/vscripts --outDir ../../编译/game/scripts/vscripts",
        "dev": "npm-run-all --parallel \"build:* --watch\" dev:*",
        "dev:console": "tsx .bin/console",
        "dev:nettable": "tsx .bin/dev",
        "dev:i18n": "tsx .bin/lang",
        "postinstall": "tsx .bin/install",
        "preinstall": "npx only-allow pnpm",
        "publish": "tsx .bin/publish.ts"
    },
    "devDependencies": {
            "@cloudbase/node-sdk": "^2.9.1",
            "@dotaddon/packer": "^0.0.12",
            "@dotaddon/rigger": "^0.0.10",
            "@mobilc/dota-axios": "^0.0.2",
            "@mobilc/tsconfig": "^0.2.2",
            "@types/node": "^18.14.1",
            "npm-run-all2": "^6.0.4",
            "dota-js-kv": "^0.1.6",
            "typescript": "^4.9.5",
            "eslint": "^8.23.0",
            "eslint-config-prettier": "^8.5.0",
            "eslint-plugin-import": "^2.26.0",
            "eslint-plugin-prettier": "^4.2.1",
            "eslint-plugin-react": "^7.31.1",
            "eslint-plugin-react-hooks": "^4.6.0"
    },
    "volta": {
        "node": "16.19.0"
    }
}
