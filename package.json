{
    "name": "tsdotarpg",
    "author": "西索酱",
    "version": "2.0.0",
    "description": "a ts template for dota2 rpg, together with some helper scripts",
    "license": "MIT",
    "repository": "https://gitee.com/takegine/ts-dota-rpg",
    "scripts": {
        "go": "run-p dev launch",
        "launch": "tsx .bin/launch",
        "compile": "tsx .bin/compile",
        "images": "tsx .bin/image",
        "suggest": "code --install-extension robincode.dota2-coding-helper --install-extension actboy168.tasks",
        "lint": "eslint --ext .js,.ts,.tsx --quiet --fix \"./程序/**/*.{js,ts,tsx}\" ",
        "test": "nodemon .bin/test.ts",
        "build": "run-p build:*",
        "dev": "npm-run-all --parallel \"build:* -- --watch\"",
        "build:kv": "tsx .bin/copy",
        "build:excels": "node toolCode/xlsx2kv.js",
        "build:kvjson": "node toolCode/kv2json.js",
        "build:images": "tsx .bin/image",
        "build:console": "tsx watch 程序/server",
        "build:client": "tsx .bin/esbuild.ts NODE_ENV=development",
        "build:server": "tstl --project 程序/middle/tsconfig.json",
        "postBuild": "node toolCode/publish.js",
        "prod": "node -e 'console.log(`hello dota2`)'",
        "postinstall": "tsx .bin/install",
        "preinstall": "npx only-allow pnpm"
    },
    "dependencies": {
        "@mobilc/panorama-cli": "^0.0.5",
        "@mobilc/panorama-polyfill": "^0.0.2",
        "@mobilc/panorama-react-dom": "^1.0.0",
        "@mobilc/panorama-type": "^0.0.11",
        "@mobilc/vlua-tool": "^0.0.8",
        "@moddota/dota-lua-types": "^4.21.1",
        "@types/react": "18.0.0",
        "@typescript-to-lua/language-extensions": "1.0.0",
        "less": "^4.1.3",
        "react": "18.0.0",
        "sass": "^1.56.1",
        "typescript": "4.8.3",
        "typescript-to-lua": "1.10.0"
    },
    "devDependencies": {
        "@mobilc/tsconfig": "^0.1.0",
        "@mobilc/utils": "0.2.4",
        "@types/node": "^18.7.18",
        "@typescript-eslint/eslint-plugin": "^5.36.0",
        "@typescript-eslint/parser": "^5.36.0",
        "chokidar": "^3.5.3",
        "esbuild": "^0.15.14",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "npm-run-all2": "^6.0.2",
        "prettier": "^2.7.1",
        "rollup": "^2.42.0"
    },
    "prettier": {
        "printWidth": 200,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "always",
        "proseWrap": "never"
    }
}